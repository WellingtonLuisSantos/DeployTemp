@model IEnumerable<CORE.BackOffice.UI.ViewModels.Annotation.AnnotationViewModel>

@{
    ViewBag.Title = "Administração - Gestão";
    CORE.Domain.Entities.User user = ((CORE.Domain.Entities.User)Session["Usuario"]);
}

@if (user.Profile.ProfileXForm.Where(x => x.IdForm == (int)CORE.BackOffice.UI.Enum.FormEnum.Customer && x.FlSearch == true).Any())
{
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="panel panel-visible" id="spy6">
            <div class="panel-heading">
                <div class="panel-title hidden-xs">
                    <span class="glyphicon glyphicon-tasks"></span>Anotações
                </div>
            </div>

            <div class="panel-body pn">
                <table width="100%" class="table display" id="datatable7" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.IdAnnotation)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descricao)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="data-id-line-profile-@item.IdAnnotation">
                                <td>
                                    @if (user.Profile.ProfileXForm.Where(x => x.IdForm == (int)CORE.BackOffice.UI.Enum.FormEnum.Customer && x.FlUpdate == true).Any())
                                    {
                                        <a href="javascript:void(0)" class="btnEdit" data-item-controller="Product" data-item="@item.IdAnnotation">@item.IdAnnotation</a>
                                    }
                                    else
                                    {
                                        <a href="javascript:void(0)">@item.IdAnnotation</a>
                                    }
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Descricao
                                </td>
                                <td>
                                    @if (user.Profile.ProfileXForm.Where(x => x.IdForm == (int)CORE.BackOffice.UI.Enum.FormEnum.Customer && x.FlDelete == true).Any())
                                    {
                                        <label class="btn-excluir btn btn-danger" data-item-controller="Product" data-id-item="@item.IdAnnotation">Deletar</label>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="panel panel-visible" id="spy6">
            <div class="panel-heading">
                <div class="panel-title hidden-xs">
                    <span class="glyphicon glyphicon-tasks"></span>Anotações
                </div>
            </div>

            <div class="panel-body pn">
                <table width="100%" class="table display" id="datatable7" cellspacing="0">
                    <section id="content" class="pn">
                        <div class="center-block mt50 mw800">
                            <h2 class="error-subtitle">Você não possui permissão para listar as anotações.</h2>
                        </div>
                    </section>
                </table>
            </div>
        </div>
    </div>
}

<div class="modal fade" tabindex='-1' data-backdrop="static" data-keyboard="true" id="myModal" role="dialog">
    <div class="modal-dialog" style="width: 800px!important;">
        <div class="modal-content">
        </div>
    </div>
</div>



<script src="~/Scripts/jquery.confirm-2.6.1/jquery.confirm.js"></script>


<script>

    $(document).ready(function () {

        $('.btnEdit').click(function () {
            ShowViewEditWithController($(this).attr('data-item-controller'), $(this).attr('data-item'));
        });

        $(".btn-excluir").confirm({
            title: "Excluir Anotação",
            text: "Você deseja excluir esta anotação?",
            confirm: function (button) {

                ExcluirRegistro($(button).attr('data-item-controller'), $(button).attr('data-id-item'));

            },
            cancel: function (button) {

            },
            confirmButton: "Sim",
            cancelButton: "Não"
        });

    });

    function ExcluirRegistro(controller, id) {

        var dataObject = JSON.stringify({ 'ID': id });

        $.ajax({
            url: controller + '/Delete',
            type: 'POST',
            contentType: 'application/json',
            data: dataObject,
            success: function (response) {

                if (response.Status == 'Success') {
                    $(".data-id-line-profile-" + id).remove();
                    showNotification(response.Title, response.Message, 'success');
                }
                else if (response.Status == 'Warning') {
                    showNotification(response.Title, response.Message, 'warning');
                }
                else if (response.Status == 'Error') {
                    showNotification(response.Title, response.Message, 'danger');
                }
                else {
                    alert("Status de retorno não tratado!");
                }

            },
            error: function (data) {
                alert("Error Submit");
            }
        });

    }

</script>

