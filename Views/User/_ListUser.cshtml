@model IEnumerable<CORE.BackOffice.UI.ViewModels.User.UserViewModel>

@{
    ViewBag.Title = "Administração - Gestão";
    Layout = null;
}

<div class="panel panel-visible" id="spy6">
    <div class="panel-heading">
        <div class="panel-title hidden-xs">
            <span class="glyphicon glyphicon-tasks"></span>Usuários
  
                @*@Html.Partial("~/Views/Shared/_ButtonsExport.cshtml")*@
          
        </div>
    </div>
    <div class="panel-body pn">
        <table width="100%" class="table display" id="datatable7" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID_USER)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NAME_USER)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LOGIN_USER)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NAME_PROFILE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FL_ACTIVE)
                    </th>
                    @*<th></th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="data-id-line-user-@item.ID_USER">
                        <td>
                            @if (ViewBag.btnEdit == true)
                            {
                                <a href="javascript:void(0)" class="btnEdit" data-item="@item.ID_USER">@item.ID_USER</a>
                            }
                            else
                            {
                                <a href="javascript:void(0)">@item.ID_USER</a>
                            }
                        </td>
                        <td>
                            @item.NAME_USER
                        </td>
                        <td>
                            @item.LOGIN_USER
                        </td>
                        <td>
                            @item.NAME_PROFILE
                        </td>
                        <td>
                            @(item.FL_ACTIVE == true ? "Ativo" : "Inativo")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal fade" tabindex='-1' data-backdrop="static" data-keyboard="true" id="myModal" role="dialog">
    <div class="modal-dialog" style="width: 800px!important;">
        <div class="modal-content">
        </div>
    </div>
</div>


<script src="~/Scripts/jquery.confirm-2.6.1/jquery.confirm.js"></script>


<script>

    $(document).ready(function () {

        $('.btnEdit').click(function () {
            ShowViewEdit($(this).attr('data-item'));
        });

        $(".btn-excluir").confirm({
            title: "Excluir Usuário",
            text: "Você deseja excluir este usuário?",
            confirm: function (button) {

                ExcluirRegistro($(button).attr('data-id-item'));

            },
            cancel: function (button) {

            },
            confirmButton: "Sim",
            cancelButton: "Não"
        });

    });

    function ExcluirRegistro(id) {

        var dataObject = JSON.stringify({'ID': id});

        $.ajax({
            url: '@Url.Action("Delete")',
            type: 'POST',
            contentType: 'application/json',
            data: dataObject,
            success: function (response) {

                if (response.Status == 'Success') {
                    $(".data-id-line-user-" + id).remove();
                    showNotification(response.Title, response.Message, 'success');
                }
                else if (response.Status == 'Warning') {
                    showNotification(response.Title, response.Message, 'warning');
                }
                else if (response.Status == 'Error') {
                    showNotification(response.Title, response.Message, 'danger');
                }
                else {
                    alert("Status de retorno não tratado!");
                }

            },
            error: function (data) {
                alert("Error Submit");
            }
        });

    }

</script>