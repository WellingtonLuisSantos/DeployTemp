@model CORE.BackOffice.UI.ViewModels.ProductType.ProductTypeViewModel

@{
    Layout = null;
    ViewBag.Title = "Administração - Tipo Produto";
}

<style>
    .field-validation-error {
        color: red !Important;
    }
</style>

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<div class="panel">
    <div class="panel-heading">
        <span class="panel-title fa fa-edit">
            Alterar Produto
        </span>
    </div>



    @using (Ajax.BeginForm("Edit", "ProductType", new AjaxOptions { OnBegin = "StartProgress", HttpMethod = "POST", OnSuccess = "TrataRetorno", OnFailure = "TrataRetorno" }))
    {
        @Html.HiddenFor(model => model.IdProductType)

        <div class="panel-body admin-form theme-info tab-pane">
            <div class="section row">
                <div class="col-lg-12 col-md-12 col-ssm-12">
                    @Html.ValidationSummary(true, string.Empty, new { @class = "alert alert-danger", Id = "errosDefinirMedico", @style = "display: none;" })
                    <div class="alert alert-danger" style="display: none" id="errorMessage">
                    </div>
                    <div>
                        <p class="alert alert-success" style="display: none" id="okMessage"></p>
                    </div>
                </div>
            </div>

            <div class="form-horizontal">

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @Class = "control-label col-sm-1 col-md-1" })
                    <div class="col-sm-11 col-md-11">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>                   
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Descricao, new { @Class = "control-label col-sm-1 col-md-1" })
                    <div class="col-sm-5 col-md-5">
                        @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Descricao)
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-sm-12 col-md-12">

                        <div class="option-group field section">
                            <label class="option block mt10" for="PRODUCT_ACTIVE">
                                <input name="FL_ACTIVE" id="PRODUCT_ACTIVE" type="radio" @(Model.FL_ACTIVE == true ? "checked=''" : "") value="true">
                                <span class="radio"></span>Ativo
                            </label>
                            <label class="option block mt10" for="PRODUCT_INACTIVE">
                                <input name="FL_ACTIVE" id="PRODUCT_INACTIVE" type="radio" @(Model.FL_ACTIVE == false ? "checked=''" : "") value="false">
                                <span class="radio"></span>Inativo
                            </label>
                        </div>

                    </div>

                </div>

                @Html.Partial("~/Views/Shared/_ButtonsModal.cshtml")

            </div>
        </div>
    }

</div>


@Scripts.Render("~/bundles/inputmask")
@Scripts.Render("~/bundles/jqueryUI-datetimepicker")

<script>
    
    $(document).ready(function () {
        
    });

</script>

@section Scripts {

}
