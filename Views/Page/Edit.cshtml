@model CORE.BackOffice.UI.ViewModels.Page.PageViewModel

@{
    //Layout = null;
    ViewBag.Title = "Administração - Perfil";
}

<style>
    .field-validation-error {
        color: red !Important;
    }
</style>
<script src="//cdn.ckeditor.com/4.5.10/full/ckeditor.js"></script>
<script>
    $(document).ready(function () {

        window.onload = function () {

            CKEDITOR.replace('CONTENT');
        };

    });
</script>

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/pnotify.js"></script>

<div class="panel-body">
    <div class="admin-form theme-info tab-pane">
        <div class="panel">
            <div class="panel-heading">
                <span class="panel-title fa fa-edit">
                    Alterar Página
                </span>
            </div>

            @using (Ajax.BeginForm("Edit", "Page", new AjaxOptions { OnBegin = "StartProgress", HttpMethod = "POST", OnSuccess = "TrataRetornoFinish", OnFailure = "TrataRetornoFinish" }))
            {
                @Html.HiddenFor(model => model.ID_PAGE)

                <div class="panel-body admin-form theme-info tab-pane">
                    <div class="section row">
                        <div class="col-lg-12 col-md-12 col-ssm-12">
                            @Html.ValidationSummary(true, string.Empty, new { @class = "alert alert-danger", Id = "errosDefinirMedico", @style = "display: none;" })
                            <div class="alert alert-danger" style="display: none" id="errorMessage">
                            </div>
                            <div>
                                <p class="alert alert-success" style="display: none" id="okMessage"></p>
                            </div>
                        </div>
                    </div>

                    <div class="form-horizontal">


                        <div class="form-group">
                            @Html.LabelFor(model => model.NAME_MENU, new { @Class = "control-label col-sm-1 col-md-1" })
                            <div class="col-sm-5 col-md-5">
                                @Html.TextBoxFor(model => model.NAME_MENU, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NAME_MENU)
                            </div>


                            @Html.LabelFor(model => model.URL, new { @Class = "control-label col-sm-1 col-md-1" })
                            <div class="col-sm-5 col-md-5">
                                @Html.TextBoxFor(model => model.URL, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.URL)
                            </div>

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ICON_PAGE, new { @Class = "control-label col-sm-1 col-md-1" })
                            <div class="col-sm-5 col-md-5">
                                @Html.TextBoxFor(model => model.ICON_PAGE, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ICON_PAGE)
                            </div>

                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
                                Mapa
                            </button>

                        </div>

                        <div class="form-group">

                            @*<div class="section-divider mv10">
                                <span>Conteudo</span>
                            </div>*@
                            <div class="col-sm-12 col-md-12">
                                <textarea id="CONTENT" name="CONTENT">@Html.Raw(Model.CONTENT)</textarea>
                                @Html.ValidationMessageFor(model => model.CONTENT)
                            </div>
                        </div>


                        <div class="form-group">

                            <div class="col-sm-12 col-md-12">

                                <div class="section-divider mv10">
                                    <span>Status</span>
                                </div>

                                <div class="option-group field section">
                                    <label class="option block mt10" for="USER_ACTIVE">
                                        <input name="FL_ACTIVE" id="USER_ACTIVE" type="radio" @(Model.FL_ACTIVE == true ? "checked=''" : "") value="true">
                                        <span class="radio"></span>Ativo
                                    </label>
                                    <label class="option block mt10" for="USER_INACTIVE">
                                        <input name="FL_ACTIVE" id="USER_INACTIVE" type="radio" @(Model.FL_ACTIVE == false ? "checked=''" : "") value="false">
                                        <span class="radio"></span>Inativo
                                    </label>
                                </div>

                            </div>

                        </div>

                        @*Html.Partial("~/Views/Shared/_ButtonsModal.cshtml")*@

                        <div class="section row mb5">
                            <div class="col-lg-12 col-md-12 col-sm-12">

                                @if (ViewBag.btnSubmit == true)
                                {
                                    <input type="submit" value="Salvar" class="col-sm-2 btn btn-info btn-right pull-right" />
                                }
                         
                            </div>
                        </div>

                    </div>
                </div>
            }
            </div>


        </div>
    </div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>*@
                <h4 class="modal-title" id="myModalLabel">Modal title</h4>
            </div>
            <div class="modal-body">
                
                    @Html.Partial("~/Views/Shared/_Map.cshtml")
               
            </div>
            <div class="modal-footer">
                
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/bundles/jqueryUI-datetimepicker")


    @section Scripts {

    }
