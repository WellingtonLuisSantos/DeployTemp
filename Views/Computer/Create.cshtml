@model CORE.BackOffice.UI.ViewModels.Computer.ComputerViewModel

@{
    Layout = null;
    ViewBag.Title = "Administração - CPU";
}

<style>
    .field-validation-error {
        color: red !Important;
    }
</style>

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<div class="panel">
    <div class="panel-heading">
        <span class="panel-title fa fa-edit">
            Cadastrar CPU
        </span>
    </div>



    @using (Ajax.BeginForm("Create", "Computer", new AjaxOptions { OnBegin = "StartProgress", HttpMethod = "POST", OnSuccess = "TrataRetorno", OnFailure = "TrataRetorno" }))
    {
        <div class="panel-body admin-form theme-info tab-pane">
            <div class="section row">
                <div class="col-lg-12 col-md-12 col-ssm-12">
                    @Html.ValidationSummary(true, string.Empty, new { @class = "alert alert-danger", Id = "errosDefinirMedico", @style = "display: none;" })
                    <div class="alert alert-danger" style="display: none" id="errorMessage">
                    </div>
                    <div>
                        <p class="alert alert-success" style="display: none" id="okMessage"></p>
                    </div>
                </div>
            </div>

            <div class="form-horizontal">

                <div class="form-group">
                    @Html.LabelFor(model => model.Ip, new { @Class = "control-label col-sm-1 col-md-1" })
                    <div class="col-sm-5 col-md-5">
                        @Html.TextBoxFor(model => model.Ip, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Ip)
                    </div>     

                    @Html.LabelFor(model => model.HostName, new { @Class = "control-label col-sm-1 col-md-1" })
                    <div class="col-sm-5 col-md-5">
                        @Html.TextBoxFor(model => model.HostName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.HostName)
                    </div>     
                 
                </div>
                <div class="form-group">


                    <div class="form-group">

                        @Html.LabelFor(model => model.Description, new { @Class = "control-label col-sm-1 col-md-1" })
                        <div class="col-sm-12 col-md-12">
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                    </div>

                        <div class="col-sm-12 col-md-12">

                            <div class="option-group field section">
                                <label class="option block mt15" for="STATUS_USER_ACTIVE">
                                    <input name="FL_ACTIVE" id="STATUS_USER_ACTIVE" type="radio" checked="" value="true">
                                    <span class="radio"></span>Ativo
                                </label>
                                <label class="option block mt15" for="STATUS_USER_INACTIVE">
                                    <input name="FL_ACTIVE" id="STATUS_USER_INACTIVE" type="radio" disabled="" value="false">
                                    <span class="radio"></span>Inativo
                                </label>
                            </div>

                        </div>

                    </div>

                    @Html.Partial("~/Views/Shared/_ButtonsModal.cshtml")

                </div>
        </div>
    }

</div>


@Scripts.Render("~/bundles/inputmask")
@Scripts.Render("~/bundles/jqueryUI-datetimepicker")

<script>

    $(document).ready(function () {
       
    });

</script>

@section Scripts {

}
