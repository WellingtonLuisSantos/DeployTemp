@model IEnumerable<CORE.BackOffice.UI.ViewModels.Cargo.CargoViewModel>

@{
    ViewBag.Title = "Administração - Gestão";
}

<div class="panel panel-visible" id="spy6">
    <div class="panel-heading">
        <div class="panel-title hidden-xs">
            <span class="glyphicon glyphicon-tasks"></span>Cargos
          
                @*@Html.Partial("~/Views/Shared/_ButtonsExport.cshtml")*@
            
        </div>
    </div>
  
    <div class="panel-body pn">
        <table width="100%" class="table display" id="datatable7" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IdCargo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.TempoExperiencia)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.FlActive)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr class="data-id-line-Cargo-@item.IdCargo">
                    <td>
                        @if (ViewBag.btnEdit == true)
                        {
                            <a href="javascript:void(0)" class="btnEdit" data-item="@item.IdCargo">@item.IdCargo</a>
                        }
                        else
                        {
                            <a href="javascript:void(0)">@item.IdCargo</a>
                        }
                    </td>
                    <td>
                        @item.Nome
                    </td>
                    @*<td>
                        @item.TempoExperiencia
                    </td>*@
                    <td>
                        @(item.FlActive == true ? "Ativo" : "Inativo")
                    </td>
                    <td>
                        @if (ViewBag.btnDelete == true)
                        {
                            <label class="btn-excluir btn btn-danger" data-id-item="@item.IdCargo">Deletar</label>
                        }
                    </td>

                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal fade" tabindex='-1' data-backdrop="static" data-keyboard="true" id="myModal" role="dialog">
    <div class="modal-dialog" style="width: 800px!important;">
        <div class="modal-content">
        </div>
    </div>
</div>


<script src="~/Scripts/jquery.confirm-2.6.1/jquery.confirm.js"></script>


<script>

    $(document).ready(function () {

        $('.btnEdit').click(function () {
            ShowViewEdit($(this).attr('data-item'));
        });

        $(".btn-excluir").confirm({
            title: "Excluir Cargo",
            text: "Você deseja excluir este Cargo?",
            confirm: function (button) {

                ExcluirRegistro($(button).attr('data-id-item'));

            },
            cancel: function (button) {

            },
            confirmButton: "Sim",
            cancelButton: "Não"
        });

    });

    function ExcluirRegistro(id) {

        var dataObject = JSON.stringify({ 'ID': id });

        $.ajax({
            url: '@Url.Action("Delete")',
            type: 'POST',
            contentType: 'application/json',
            data: dataObject,
            success: function (response) {

                if (response.Status == 'Success') {
                    $(".data-id-line-Cargo-" + id).remove();
                    showNotification(response.Title, response.Message, 'success');
                }
                else if (response.Status == 'Warning') {
                    showNotification(response.Title, response.Message, 'warning');
                }
                else if (response.Status == 'Error') {
                    showNotification(response.Title, response.Message, 'danger');
                }
                else {
                    alert("Status de retorno não tratado!");
                }

            },
            error: function (data) {
                alert("Error Submit");
            }
        });

    }

</script>

