@model CORE.BackOffice.UI.ViewModels.CustomerProduct.CustomerProductViewModel

@{
    Layout = null;
    ViewBag.Title = "Administração - Produto X CPU";
}

<style>
    .field-validation-error {
        color: red !Important;
    }
</style>

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<div class="panel">
    <div class="panel-heading">
        <span class="panel-title fa fa-lock">
            Criar Acesso
        </span>
    </div>



    @using (Ajax.BeginForm("Create", "CustomerProduct", new AjaxOptions { OnBegin = "StartProgress", HttpMethod = "POST", OnSuccess = "TrataRetorno", OnFailure = "TrataRetorno" }))
    {
        <div class="panel-body admin-form theme-info tab-pane">
            <div class="section row">
                <div class="col-lg-12 col-md-12 col-ssm-12">
                    @Html.ValidationSummary(true, string.Empty, new { @class = "alert alert-danger", Id = "errosDefinirMedico", @style = "display: none;" })
                    <div class="alert alert-danger" style="display: none" id="errorMessage">
                    </div>
                    <div>
                        <p class="alert alert-success" style="display: none" id="okMessage"></p>
                    </div>
                </div>
            </div>

            <div class="form-horizontal">

                <div class="col-lg-12 col-md-12 col-sm-12 filtro-agenda">
                    <div class="form-group">

                        @Html.LabelFor(model => model.NameCustomer, new { @Class = "control-label col-sm-1 col-md-1" })
                        <div class="col-sm-5 col-md-5">
                            @Html.DropDownListFor(model => model.IdCustomer, Model.Customer, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IdCustomer, string.Empty, new { @class = "state-error" })
                        </div>

                        @Html.LabelFor(model => model.NameProduct, new { @Class = "control-label col-sm-1 col-md-1" })
                        <div class="col-sm-5 col-md-5">
                            @Html.DropDownListFor(model => model.IdProduct, Model.Product, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IdProduct, string.Empty, new { @class = "state-error" })
                        </div>              

                    </div>
                </div>

                @Html.Partial("~/Views/Shared/_ButtonsModal.cshtml")

            </div>
        </div>
    }

</div>

@Scripts.Render("~/bundles/inputmask")
@Scripts.Render("~/bundles/jqueryUI-datetimepicker")

<script>


</script>

@section Scripts {

}
