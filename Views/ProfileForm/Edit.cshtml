@model CORE.BackOffice.UI.ViewModels.ProfileForm.ProfileFormViewModel

@{
    Layout = null;
    ViewBag.Title = "Administração - Perfil";
}

<style>
    .field-validation-error {
        color: red !Important;
    }
</style>

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<div class="panel">
    <div class="panel-heading">
        <span class="panel-title fa fa-lock">
            Alterar Acesso
        </span>
    </div>



    @using (Ajax.BeginForm("Edit", "ProfileForm", new AjaxOptions { OnBegin = "StartProgress", HttpMethod = "POST", OnSuccess = "TrataRetorno", OnFailure = "TrataRetorno" }))
    {
        @Html.HiddenFor(model => model.ID_PROFILE_X_FORM)

        <div class="panel-body admin-form theme-success bg-light panel-success tab-pane">
            <div class="section row">
                <div class="col-lg-12 col-md-12 col-ssm-12">
                    @Html.ValidationSummary(true, string.Empty, new { @class = "alert alert-danger", Id = "errosDefinirMedico", @style = "display: none;" })
                    <div class="alert alert-danger" style="display: none" id="errorMessage">
                    </div>
                    <div>
                        <p class="alert alert-success" style="display: none" id="okMessage"></p>
                    </div>
                </div>
            </div>

            <div class="form-horizontal">

                <div class="col-lg-12 col-md-12 col-sm-12 filtro-agenda">
                    <div class="form-group">

                        @Html.LabelFor(model => model.NAME_PROFILE, new { @Class = "control-label col-sm-1 col-md-1" })
                        <div class="col-sm-5 col-md-5">
                            @Html.DropDownListFor(model => model.ID_PROFILE, Model.PROFILE, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ID_PROFILE, string.Empty, new { @class = "state-error" })
                        </div>

                        @Html.LabelFor(model => model.NAME_FORM, new { @Class = "control-label col-sm-1 col-md-1" })
                    <div class="col-sm-5 col-md-5">
                        @Html.DropDownListFor(model => model.ID_FORM, Model.FORM, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ID_FORM, string.Empty, new { @class = "state-error" })
                    </div>

                    </div>
                </div>

                <div class="form-group">

                    <div class="col-sm-6 col-md-6">

                        <div class="section-divider mv20">
                            <span>Tarefa</span>
                        </div>
                        <div class="col-sm-12 col-md-12">
                            <div class="bs-component col-sm-6 col-md-6">
                                <div class="checkbox-custom mb10">
                                    <input id="FL_CREATE" name="FL_CREATE" value="true" type="checkbox" @(Model.FL_CREATE == true ? "checked=''" : "")>
                                    @Html.LabelFor(model => model.FL_CREATE, new { @for = "FL_CREATE" })
                                </div>
                            </div>


                            <div class="bs-component col-sm-6 col-md-6">
                                <div class="checkbox-custom mb10">
                                    <input id="FL_SEARCH" name="FL_SEARCH" value="true" type="checkbox" @(Model.FL_SEARCH == true ? "checked=''" : "")>
                                    @Html.LabelFor(model => model.FL_SEARCH, new { @for = "FL_SEARCH" })
                                </div>
                            </div>


                        </div>
                        <div class="col-sm-12 col-md-12">
                            <div class="bs-component col-sm-6 col-md-6">
                                <div class="checkbox-custom mb10">
                                    <input id="FL_UPDATE" name="FL_UPDATE" value="true" type="checkbox" @(Model.FL_UPDATE == true ? "checked=''" : "")>
                                    @Html.LabelFor(model => model.FL_UPDATE, new { @for = "FL_UPDATE" })
                                </div>
                            </div>


                            <div class="bs-component col-sm-6 col-md-6">
                                <div class="checkbox-custom mb10">
                                    <input id="FL_DELETE" name="FL_DELETE" value="true" type="checkbox" @(Model.FL_DELETE == true ? "checked=''" : "")>
                                    @Html.LabelFor(model => model.FL_DELETE, new { @for = "FL_DELETE" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-md-6">

                        <div class="section-divider mv20">
                            <span>Status</span>
                        </div>

                        <div class="option-group field section">
                            <label class="option block mt10" for="USER_ACTIVE">
                                <input name="FL_ACTIVE" id="USER_ACTIVE" type="radio" @(Model.FL_ACTIVE == true ? "checked=''" : "") value="true">
                                <span class="radio"></span>Ativo
                            </label>
                            <label class="option block mt10" for="USER_INACTIVE">
                                <input name="FL_ACTIVE" id="USER_INACTIVE" type="radio" @(Model.FL_ACTIVE == false ? "checked=''" : "") value="false">
                                <span class="radio"></span>Inativo
                            </label>
                        </div>

                    </div>
                </div>


                @Html.Partial("~/Views/Shared/_ButtonsModal.cshtml")

            </div>
        </div>
    }

</div>


@Scripts.Render("~/bundles/inputmask")
@Scripts.Render("~/bundles/jqueryUI-datetimepicker")

<script>

</script>

@section Scripts {

}
