@model CORE.BackOffice.UI.ViewModels.Loja.LojaViewModel

@{
    Layout = null;
    ViewBag.Title = "Administração - Cargo";
}

<style>
    .field-validation-error {
        color: red !Important;
    }
</style>

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<div class="panel">
    <div class="panel-heading">
        <span class="panel-title fa fa-edit">
            Alterar Loja
        </span>
    </div>



    @using (Ajax.BeginForm("Edit", "Loja", new AjaxOptions { OnBegin = "StartProgress", HttpMethod = "POST", OnSuccess = "TrataRetorno", OnFailure = "TrataRetorno" }))
    {
        @Html.HiddenFor(model => model.IdLoja)

        <div class="panel-body admin-form theme-info tab-pane">
            <div class="section row">
                <div class="col-lg-12 col-md-12 col-ssm-12">
                    @Html.ValidationSummary(true, string.Empty, new { @class = "alert alert-danger", Id = "errosDefinirMedico", @style = "display: none;" })
                    <div class="alert alert-danger" style="display: none" id="errorMessage">
                    </div>
                    <div>
                        <p class="alert alert-success" style="display: none" id="okMessage"></p>
                    </div>
                </div>
            </div>

            <div class="form-horizontal">

                <div class="form-group">
                    @Html.LabelFor(model => model.Nome, new { @Class = "control-label col-sm-1 col-md-1" })
                    <div class="col-sm-5 col-md-5">
                        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Nome)
                    </div>
                
                    @Html.LabelFor(model => model.CNPJ, new { @Class = "control-label col-sm-1 col-md-1" })
                    <div class="col-sm-5 col-md-5">
                        @Html.TextBoxFor(model => model.CNPJ, new { @class = "form-control cnpjField" })
                        @Html.ValidationMessageFor(model => model.CNPJ)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Descricao, new { @Class = "control-label col-sm-1 col-md-1" })
                    <div class="col-sm-11 col-md-11">
                        @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Descricao)
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-sm-12 col-md-12">

                        <div class="section-divider mv10">
                            <span>Status</span>
                        </div>

                        <div class="option-group field section">
                            <label class="option block mt10" for="USER_ACTIVE">
                                <input name="FlActive" id="USER_ACTIVE" type="radio" @(Model.FlActive == true ? "checked=''" : "") value="true">
                                <span class="radio"></span>Ativo
                            </label>
                            <label class="option block mt10" for="USER_INACTIVE">
                                <input name="FlActive" id="USER_INACTIVE" type="radio" @(Model.FlActive == false ? "checked=''" : "") value="false">
                                <span class="radio"></span>Inativo
                            </label>
                        </div>

                    </div>

                </div>

                @Html.Partial("~/Views/Shared/_ButtonsModal.cshtml")

            </div>
        </div>
    }

</div>


@Scripts.Render("~/bundles/inputmask")
@Scripts.Render("~/bundles/jqueryUI-datetimepicker")

<script>
    
    $(document).ready(function () {
        $.datepicker.setDefaults($.datepicker.regional['pt-BR']);

        $('.dateField').datepicker({
            language: "pt-BR",
            format: 'dd/mm/yyyy',
            autoclose: true,
            prevText: '<i class="fa fa-chevron-left"></i>',
            nextText: '<i class="fa fa-chevron-right"></i>',
            showButtonPanel: false
        });


        $(".hourField").inputmask("99:99", { "clearIncomplete": true });
        $(".dateField").inputmask("99/99/9999", { "clearIncomplete": true });
        $(".cpfField").inputmask("999.999.999-99", { "clearIncomplete": true });
        $(".cnpjField").inputmask("99.999.999/9999-99", { "clearIncomplete": true });
    });

</script>

@section Scripts {

}
