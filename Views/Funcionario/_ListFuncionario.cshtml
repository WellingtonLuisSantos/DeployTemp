@model IEnumerable<CORE.BackOffice.UI.ViewModels.Funcionario.FuncionarioViewModel>

@{
    ViewBag.Title = "Administração - Gestão";
    Layout = null;
}

                      <div class="panel panel-visible" id="spy6">
                          <div class="panel-heading">
                              <div class="panel-title hidden-xs">
                                  <span class="glyphicon glyphicon-tasks"></span>Funcionários

                                  @Html.Partial("~/Views/Shared/_ButtonsExport.cshtml")

                              </div>
                          </div>

                          <div class="panel-body pn">
                              <table width="100%" class="table display" id="datatable7" cellspacing="0">
                                  <thead>
                                      <tr>
                                          <th>
                                              @Html.DisplayNameFor(model => model.Matricula)
                                          </th>
                                          <th>
                                              @Html.DisplayNameFor(model => model.Nome)
                                          </th>
                                          <th>
                                              @Html.DisplayNameFor(model => model.NrCPF)
                                          </th>
                                          <th>
                                              @Html.DisplayNameFor(model => model.FlActive)
                                          </th>
                                          <th></th>
                                          <th></th>
                                      </tr>
                                  </thead>
                                  <tbody>
                                      @foreach (var item in Model)
                                      {
                                      <tr class="data-id-line-user-@item.IdFuncionario">
                                          <td>
                                              @if (ViewBag.btnEdit == true)
                                              {
                                                  <a href="javascript:void(0)" class="btnEdit" data-item-controller="Funcionario" data-item="@item.IdFuncionario">@item.Matricula</a>
                                              }
                                              else
                                              {
                                                  <a href="javascript:void(0)">@item.IdFuncionario</a>
                                              }
                                          </td>
                                          <td>
                                              @item.Nome
                                          </td>
                                          <td>
                                              @item.NrCPF
                                          </td>
                                          <td>
                                              @(item.FlActive == true ? "Ativo" : "Inativo")
                                          </td>
                                          <td>
                                              <a href="javascript:void(0)" class="btnDetail" data-item-controller="Funcionario" data-item="@item.IdFuncionario">Visualizar</a>
                                          </td>
                                          <td>
                                              @if (ViewBag.btnDelete == true)
                                              {
                                                  <label class="btn-excluir btn btn-danger" data-id-item="@item.IdFuncionario">Deletar</label>
                                              }
                                          </td>
                                      </tr>
                                      }
                                  </tbody>
                              </table>

                          </div>
                      </div>
<div class="modal fade" tabindex='-1' data-backdrop="static" data-keyboard="true" id="myModal" role="dialog">
    <div class="modal-dialog" style="width: 800px!important;">
        <div class="modal-content">
        </div>
    </div>
</div>


<script src="~/Scripts/jquery.confirm-2.6.1/jquery.confirm.js"></script>


<script>

    $(document).ready(function () {

        $('.btnEdit').click(function () {
            //ShowViewEditWithController($(this).attr('data-item-controller'), $(this).attr('data-item'));
            ShowViewEdit($(this).attr('data-item'));
        });

        $('.btnDetail').click(function () {
            ShowViewDetail($(this).attr('data-item'));
        });

        $(".btn-excluir").confirm({
            title: "Excluir Funcionário",
            text: "Você deseja excluir este funcionário?",
            confirm: function (button) {

                ExcluirRegistro($(button).attr('data-id-item'));

            },
            cancel: function (button) {

            },
            confirmButton: "Sim",
            cancelButton: "Não"
        });

    });

    function ExcluirRegistro(id) {

        var dataObject = JSON.stringify({'ID': id});

        $.ajax({
            url: '@Url.Action("Delete")',
            type: 'POST',
            contentType: 'application/json',
            data: dataObject,
            success: function (response) {

                if (response.Status == 'Success') {
                    $(".data-id-line-user-" + id).remove();
                    showNotification(response.Title, response.Message, 'success');
                }
                else if (response.Status == 'Warning') {
                    showNotification(response.Title, response.Message, 'warning');
                }
                else if (response.Status == 'Error') {
                    showNotification(response.Title, response.Message, 'danger');
                }
                else {
                    alert("Status de retorno não tratado!");
                }

            },
            error: function (data) {
                alert("Error Submit");
            }
        });

    }

</script>