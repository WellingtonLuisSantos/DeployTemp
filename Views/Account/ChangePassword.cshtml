@model CORE.BackOffice.UI.ViewModels.User.ChangePasswordViewModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Administração - Alterar senha";
}

<style>
    .field-validation-error {
        color: red !Important;
    }
</style>

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<div class="admin-form theme-info mw500" style="margin-top: 10%;" id="login">
    <div class="row mb15 table-layout">

        <div class="col-xs-6 pln">
            @*<a href="dashboard.html" title="Return to Dashboard">
                    <img src="assets/img/logos/logo.png" title="AdminDesigns Logo" class="img-responsive w250">
                </a>*@
        </div>

        <div class="col-xs-6 va-b">
            <div class="login-links text-right">
                <a href="~/home/index" class="" title="False Credentials">Voltar</a>
            </div>
        </div>
    </div>

    <div class="panel">

        @*<form method="post" action="ChangePassword" id="Account">*@
        @using (Ajax.BeginForm("ChangePassword", "Account", new AjaxOptions { OnBegin = "StartProgress", HttpMethod = "POST", OnSuccess = "TrataRetornoFinish", OnFailure = "TrataRetornoFinish" }))
        {
            <!-- end .form-body section -->
            <div class="panel-footer p25 pv15">
                <div class="section row">
                    <div class="col-lg-12 col-md-12 col-ssm-12">
                        @*@Html.ValidationSummary(true, string.Empty, new { @class = "alert alert-danger", Id = "errosDefinirMedico", @style = "display: none;" })
                        <div class="alert alert-danger" style="display: none" id="errorMessage">
                        </div>
                        <div>
                            <p class="alert alert-success" style="display: none" id="okMessage"></p>
                        </div>*@
                    </div>
                </div>
                <div class="section mn">
                    <div class="smart-widget sm-right smr-80">
                        <label for="email" class="field prepend-icon">
                            @*<input type="text" name="email" id="email" class="gui-input" placeholder="E-mail">*@
                            @Html.PasswordFor(model => model.Password, new { @placeholder = "Digite sua senha", @class = "gui-input" })
                            <label for="email" class="field-icon">
                                <i class="fa fa-lock"></i>
                            </label>
                        </label>
                        @Html.ValidationMessageFor(model => model.Password)
                        <label for="email" class="field prepend-icon">
                            @*<input type="text" name="email" id="email" class="gui-input" placeholder="E-mail">*@
                            @Html.PasswordFor(model => model.NewPassword, new { @placeholder = "Digite a nova senha", @class = "gui-input" })
                            <label for="email" class="field-icon">
                                <i class="fa fa-lock"></i>
                            </label>
                        </label>
                        @Html.ValidationMessageFor(model => model.NewPassword)
                        <label for="email" class="field prepend-icon">
                            @*<input type="text" name="email" id="email" class="gui-input" placeholder="E-mail">*@
                            @Html.PasswordFor(model => model.ConfirmNewPassword, new { @placeholder = "Confirme a nova senha", @class = "gui-input" })
                            <label for="email" class="field-icon">
                                <i class="fa fa-lock"></i>
                            </label>
                        </label>
                        @Html.ValidationMessageFor(model => model.ConfirmNewPassword)

                    </div>
                    <div class="smart-widget sm-right smr-80">
                        <button for="email" class="button">Alterar</button>
                    </div>
                    <!-- end section -->

                </div>
                <!-- end .form-footer section -->
                @*</form>*@

            </div>
        }
    </div>

    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/bundles/jqueryUI-datetimepicker")

    <script>

        $(document).ready(function () {

        });

    </script>

    @section Scripts {

    }
